<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.sla.ClientServerPictureViewerController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <VBox prefHeight="0.0" prefWidth="504.0">
         <children>
            <HBox prefHeight="33.0" prefWidth="341.0">
               <children>
                  <Label alignment="BASELINE_RIGHT" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="78.0" text="IP Address:" />
                  <TextField fx:id="IPAddressText" prefHeight="27.0" prefWidth="261.0" />
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="39.0" text="Port:" textAlignment="RIGHT" />
                  <TextField fx:id="portText" prefHeight="27.0" prefWidth="61.0" />
                  <Button fx:id="startButton" mnemonicParsing="false" onAction="#startButtonPressed" prefHeight="27.0" prefWidth="79.0" text="Start" />
               </children>
            </HBox>
            <HBox prefHeight="32.0" prefWidth="341.0">
               <children>
                  <Label alignment="BASELINE_RIGHT" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="79.0" text="Status: " />
                  <TextField fx:id="statusText" prefHeight="27.0" prefWidth="433.0" />
               </children>
            </HBox>
            <HBox prefHeight="33.0" prefWidth="341.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="76.0" text="Your Name:" />
                  <TextField fx:id="yourNameText" prefHeight="27.0" prefWidth="430.0" />
               </children>
            </HBox>
            <ImageView fx:id="sendImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <HBox prefHeight="36.0" prefWidth="504.0">
               <children>
                  <Button fx:id="openButton" mnemonicParsing="false" onAction="#openPicture" prefHeight="27.0" prefWidth="94.0" text="Open" />
                  <Button fx:id="sendButton" mnemonicParsing="false" onAction="#sendButtonPressed" prefHeight="27.0" prefWidth="94.0" text="Send" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" />
            <ImageView fx:id="receivedImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </VBox>
   </children>
</GridPane>
